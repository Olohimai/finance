<div class="py-10 px-12">
    <form action="/portal/invoice"  method="post">
        <div class="">
            <label for="reference" class="text-2xl font-bold">INVOICE REFERENCE:</label>
            <input type="text" class="rounded border py-2 px-3" id="reference" name="reference" placeholder="Enter Invoice reference" aria-describedby="referenceHelp"
            >
            <div id="referenceHelp" class="text-base my-2">Enter your unique invoice reference number.</div>
           <% if(error) {%>
